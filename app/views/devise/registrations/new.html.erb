<div class="mx-auto w-50">
  <h2 class="text-center my-3">新規登録</h2>
  
  <%= form_with scope: resource, url: registration_path(resource_name), local: true do |f| %>
    <%= bootstrap_devise_error_messages! %>
    <div class="form-inline mb-3">
      <label class="mr-4">お名前　</label>
      <div class="form-group">
        <%= f.text_field :last_name, autofocus: true, placeholder: "名", class: "form-control mr-3" %>
      </div>
      <div class="form-group">
        <%= f.text_field :first_name, autofocus: true, placeholder: "姓", class: "form-control" %>
      </div>
    </div>
    <div class="form-inline mb-3">
      <label class="mr-4">フリガナ</label>
      <div class="form-group mr-3">
        <%= f.text_field :last_name_kana, placeholder: "セイ", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label "電話番号" %><br />
      <%= f.text_field :telephone_number, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label "パスワード" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  
    <div class="form-group mb-2">
      <%= f.label "パスワードの確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    
    <hr>
  
    <div class="form-group">
      <%= f.label "郵便番号" %><br />
      <%= f.text_field :postal_code, autocomplete: 'postcode', class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label "住所" %><br />
      <%= f.text_field :address, autocomplete: 'address', class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.submit "登録", class: "btn btn-block btn-success" %>
    </div>
  <% end  %>
</div> 