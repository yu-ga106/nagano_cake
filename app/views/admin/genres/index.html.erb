<div class="container mt-4 text-left">
  <div calss="row">
    <div class="col">
      <span class="px-3" style="font-size: 24px; background-color: #d3d3d3;">
			  ジャンル一覧・追加
			</span>
  </div>
  <%= form_with model: @genre_new, url: admin_genres_path, class: "my-2",local:true do |f| %>
  <div class="row">
    <div class="col-2">
      <h5><i class="fas fa-candy-cane"></i>ジャンル名</h5>
    </div>
    <div class="col-3">
      <%= f.text_field :name, placeholder:"ジャンル名", class: "form-control"  %>
    </div>
    <div class="col">
      <%= f.submit "新規追加", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-9">
      <table class="table table-hover table-inverse table-bordered">
            <div><%= paginate(@genres) %></div>
        <thead class="bg-light">
          <tr class="info">
            <th>ジャンル</th>
            <!--<th>状態</th>-->
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= genre.name%></td>
              <td class="genre-td"><%= link_to "編集する", edit_admin_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
              <td class="genre-td"><%= link_to "消去する", admin_genre_path(genre), data: {confirm: "本当に削除しますか？"}, class: "glyphicon glyphicon-pencil btn btn-danger" ,method: :delete%></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <div class= "text-center"><%= paginate(@genres) %></div>
    </div>
  </div>
</div>