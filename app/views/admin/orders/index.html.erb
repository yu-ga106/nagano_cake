<div class="container mt-4">
  <div calss="row">
      <span class="px-3" style="font-size: 24px; background-color: #d3d3d3;">
			  注文履歴一覧
			</span>
      <table class="table table-hover table-bordered table-condensed mt-4">
        <thead class="bg-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td id="id-link">
              <%= link_to admin_order_path(order) , class: 'btn-link' do %>
                <%= order.created_at.strftime('%Y/%m/%d/%H:%M:%S')%>
              <% end %>
            </td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_details.count %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>