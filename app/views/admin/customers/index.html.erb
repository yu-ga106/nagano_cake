<div class="container mt-4">
  <div calss="row">
      <span class="px-3" style="font-size: 24px; background-color: #d3d3d3;">
			  会員一覧
			</span>
  <table class="table table-hover table-bordered table-condensed mt-4">
    <thead class="bg-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td class="text-left">
            <%= link_to admin_customer_path(customer), class: "btn-link"  do %>
              <i class="far fa-user"></i>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
            <% if customer.is_deleted == true%>
              <td class="text-danger">退会済</td>
            <% else %>
              <td class="text-success">有効</td>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class= "text-center"><%= paginate(@customers) %></div>
</div>