<div class="container">
  <h2 ="text-center my-3">会員一覧</h2>
  <table class="table table-hover table-bordred table-condensed">
    <thead>
      <tr class="info">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td class="info col-xs-1">
            <%= customer.id %>
          </td>
          <td class="text-left">
            <%= link_to customer_path(customer), class: "btn-link" do %>
              <i class="far fa-user"></i>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td class="text-left">
            <%= customer.emasil %>
          </td>
          <td class="col-xs-2">
            <% if customer.is_deleted %>
              <p>退会済</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center"><%= pagonate(@customers) %></div>
</div>